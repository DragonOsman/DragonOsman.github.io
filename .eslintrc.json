{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended", 
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "parser": "babel"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": "off",
        "yoda": "error",
        "prefer-const": "error",
        "eqeqeq": "error",
        "no-var": "error"
    }
}